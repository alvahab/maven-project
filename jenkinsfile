
pipeline {
    agent any
    stages{
        stage('Build'){
            steps {
                sh 'mvn clean package'
            }
            post {
                success {
                    echo 'Now Archiving...'
                    archiveArtifacts artifacts: '**/target/*.war'
                }
            }
        }
        

        stage ('Deploy to Staging'){
            steps {
                build job: 'av-deploy-to-staging'
            }
        }

        stage ('Deploy to Production'){
            steps{
                timeout(time:5, unit:'DAYS'){
                    input message:'Approve PRODUCTION Deployment?'
                }

                build job: 'ars-deploy-to-staging'
            }
            post {
                success {
                    echo 'Code deployed to Production.-ars'
                }

                failure {
                    echo ' Deployment failed.-ars'
                }
            }
        }
    }
}